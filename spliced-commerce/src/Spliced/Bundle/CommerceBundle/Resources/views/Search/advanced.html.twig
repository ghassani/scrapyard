{% extends "SplicedCommerceBundle:Layouts:default.html.twig" %}

{% block content %}
<div class="page-header">
    <h1>Advanced <small>Search</small></h1>
</div>

<fieldset>
    <div class="input-prepend">
        <span class="add-on"><i class="icon-search"></i></span>
        {{ form_widget(form.query, { 'attr' : { 'class' : 'span11', 'placeholder' : 'Search Terms' } }) }}
    </div>
    <div class="input-prepend">
        <span class="add-on">Search Type</span>
        {{ form_widget(form.type, { 'attr' : { 'class' : 'span6' } }) }}
    </div>
</fieldset>
<fieldset>
    {{ commerce_attribute_search_form()|raw }}
</fieldset>
{{ form_rest(form) }}
{% endblock content %}
