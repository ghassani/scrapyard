{#
	Product/Form/add_to_cart_selectable.html.twig
	@package SplicedCommerceBundle
	@author Gassan Idriss - ghassani@splicedmedia.com

	@var product
	@var minQuantity
	@var maxQuantity
	@var btnClass
#}

<div class="add-to-cart">
	<form method="post" action="{{ path('commerce_cart_add') }}" class="add-to-cart-form add-to-cart-form-selectable">
		<input type="hidden" name="id" value="{{  product.id }}" class="product_id" />
		<div class="input-append">
			<select class="span1 quantity-selectable" name="quantity">
				{% for quantity in range(minQuantity,maxQuantity) %}
					<option value="{{ quantity }}">{{ quantity }}</option>
				{% endfor %}
		    </select>
			<button class="btn btn-info {{ btnClass is defined ? btnClass : '' }}" type="submit">Add to Cart</button>
		</div>
	</form>
</div>
