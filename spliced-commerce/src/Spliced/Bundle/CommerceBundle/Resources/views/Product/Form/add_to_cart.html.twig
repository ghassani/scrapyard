{#
	Product/Form/add_to_cart.html.twig
	@package SplicedCommerceBundle
	@author Gassan Idriss - ghassani@splicedmedia.com

	@var product
	@var quantity
	@var noDropdown
	@var noQuantity
#}

<div class="add-to-cart">
	<form method="post" action="{{ path('commerce_cart_add') }}" class="add-to-cart-form">
		<input type="hidden" name="id" value="{{  product.id }}" class="product_id" />
		<div class="input-group">
	      <input type="text" name="quantity" class="form-control" value="{{ quantity is defined ? quantity : 1 }}" />
	      <span class="input-group-btn">
	        <button class="btn btn-info" type="submit"><i class="icon-shopping-cart icon-white"></i> Add to Cart</button>
	      </span>
	    </div>
	</form>
</div>