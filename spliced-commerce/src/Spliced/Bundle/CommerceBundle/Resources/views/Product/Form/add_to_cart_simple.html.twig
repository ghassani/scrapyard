{#
	Product/Form/add_to_cart_simple.html.twig
	@package SplicedCommerceBundle
	@author Gassan Idriss - ghassani@splicedmedia.com

	@var product
	@var quantity
	@var btnClass
#}

<div class="add-to-cart">
	<form method="post" action="{{ path('commerce_cart_add') }}" class="add-to-cart-form add-to-cart-form-simple">
		<input type="hidden" name="id" value="{{  product.id }}" class="product_id" />

		<input type="hidden" name="quantity" class="quantity" value="{{ quantity is defined ? quantity : 1 }}" />
		<button class="btn btn-info {{ btnClass is defined ? btnClass : '' }}" type="submit">Add to Cart</button>

	</form>
</div>
