{% extends 'SplicedCommerceBundle::Layouts/default.html.twig' %}

{% block title %}Forgot Password | {{ commerce_get_config('commerce.store.name') }}{% endblock %}

{% form_theme form "SplicedCommerceBundle:Form:bootstrap_form_row_horizontal.html.twig" %}

{% block content %}
<div class="page-header">
    <h1>Forgot Password - Password Reset Request</h1>
</div>

<div class="well well-small">To request to reset your password, please enter your account email address.</div>
<form method="post" action="" role="form" class="form-horizontal">
	{{ form_row(form.email) }}
	{{ form_rest(form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-success">Request Password Reset</button>
    </div>
</form>
{% endblock %}