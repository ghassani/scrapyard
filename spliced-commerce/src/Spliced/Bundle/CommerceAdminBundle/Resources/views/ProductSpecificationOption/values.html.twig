{% macro value_form(form, specificationOption) %}
    {% spaceless %}
    	{% if form.vars.data.id is defined %}
			<tr class="section-start product-specification-option-value-{{ form.vars.data.id }}">
	    		<td>{{ form_widget(form.value) }}</td>
	            <td>{{ form_widget(form.publicValue) }}</td>
	            <td>{{ form_widget(form.position) }}</td>
	            <td>
	                <a href="{{ path('commerce_admin_product_specification_option_delete_value', { 'id' : specificationOption.id, 'valueId' : form.vars.data.id }) }}" class="delete-product-specification-option-value" title="Delete Value">
	                	<i class="icon icon-trash"></i>
	                </a>
	            </td>
	        </tr>
    	{% else %}
		    <tr class="section-start product-specification-option-value-__name__">
			    <td>{{ form_widget(form.value) }}</td>
			    <td>{{ form_widget(form.publicValue) }}</td>
			    <td>{{ form_widget(form.position) }}</td>
			    <td>
			        <a href="#" class="delete-product-specification-option" title="Delete Value">
			        	<i class="icon icon-trash"></i>
			        </a>
			    </td>
		    </tr>
    	{% endif %}
    {% endspaceless %}
{% endmacro %}

{% import _self as renderHelper %}

<table class="table table-striped table-bordered table-condensed product-specification-option-value-table">
    <thead>
	    <tr>
	        <th>Value</th>
	        <th>Public Value</th>
	        <th>Position</th>
	        <th></th>
	    </tr>
    </thead>
    <tfoot>
        <tr>
            <th colspan="4" class="text-right">
                <a href="javascript:void(0);" title="Add Value" data-prototype="{{ renderHelper.value_form(form.values.vars.prototype)|e }}" class="btn btn-success add-product-specification-option-value"><i class="icon-plus"></i> Add Value</a>
            </th>
        </tr>
    </tfoot>
    <tbody class="main-body">
        {% if form.values|length %}
	        {% for value in form.values %}
	        	{{ renderHelper.value_form(value, form.vars.data) }}
	        {% endfor %}
	    {% else %}
	    <tr class="no-results">
	        <td colspan="4" class="text-center"><strong>No values were found, you need to add some.</strong></td>
	    </tr>
	    {% endif %}
    </tbody>
</table> 