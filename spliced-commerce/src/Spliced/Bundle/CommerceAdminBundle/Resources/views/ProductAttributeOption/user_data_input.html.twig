{% if form.optionData is defined %}

{% form_theme form.optionData "SplicedCommerceAdminBundle:Form:bootstrap_form_row.html.twig" %}

<div class="form-group">
	<div class="col-sm-4 col-lg-4">
		{{ form_row(form.optionData.required, { 'help_text' : 'Required to purchase item?' }) }}
	</div>
	<div class="col-sm-8 col-lg-8">
		{{ form_row(form.optionData.required_error_message, { 'help_text' : 'Message to display if required and left blank' }) }}
	</div>
</div>

<div class="form-group">
	<div class="col-lg-4 col-sm-4">
		{{ form_row(form.optionData.collection_type, { 'help_text' : 'How to collect user data' }) }}
	</div>
	<div class="col-lg-4 col-sm-4">
		{{ form_row(form.optionData.min_length, { 'help_text' : 'Minimum input length' }) }}
	</div>
	<div class="col-lg-4 col-sm-4">
		{{ form_row(form.optionData.max_length, { 'help_text' : 'Maximum input length' }) }}
	</div>
</div>

<div class="form-group">
	<div class="col-lg-4 col-sm-4">
		{{ form_row(form.optionData.wrapper_class, { 'help_text' : 'CSS class applied to the inputs wrapper' }) }}
	</div>
	<div class="col-lg-4 col-sm-4">
		{{ form_row(form.optionData.input_class, { 'help_text' : 'CSS class applied to the input widget' }) }}
	</div>
	<div class="col-lg-4 col-sm-4">
		{{ form_row(form.optionData.label_class, { 'help_text' : 'CSS class applied to the inputs label' }) }}
	</div>
</div>

<div class="form-group">
	<div class="col-lg-12 col-sm-12">
		{{ form_row(form.optionData.help, { 'help_text' : 'Text/HTML to help the user' }) }}
	</div>
</div>

{% endif %}
