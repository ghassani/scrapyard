{% macro value_prototype(prototype) %}
    {% spaceless %}
    {% if prototype.vars.data.id is defined %}
    
    {% else %}
    <tr class="section-start section__name__">
	    <td>-</td>
	    <td>{{ form_widget(prototype.value) }}</td>
	    <td>{{ form_widget(prototype.publicValue) }}</td>
	    <td>{{ form_widget(prototype.position) }}</td>
	    <td>
	        <a href="#" class="delete-product-attribute-option" title="Delete Value"><i class="icon icon-trash"></i></a>
	    </td>
    </tr>
    {% endif %}
    {% endspaceless %}
{% endmacro %}

{% import _self as renderHelper %}

<table class="table table-striped table-bordered table-condensed product-attribute-option-value-table">
    <thead>
	    <tr>
	        <th>ID</th>
	        <th>Value</th>
	        <th>Public Value</th>
	        <th>Position</th>
	        <th></th>
	    </tr>
    </thead>
    <tfoot>
        <tr>
            <th colspan="5" class="text-right">
                <a href="#" title="Add Value" data-prototype="{{ renderHelper.value_prototype(form.values.vars.prototype)|e }}" class="btn btn-success add-product-attribute-option-value"><i class="icon-plus"></i> Add Value</a>
            </th>
        </tr>
    </tfoot>
    <tbody class="main-body">
        {% if form.values|length %}
	        {% for value in form.values %}
	        <tr>
	            <td>{{ value.vars.data.id }}</td>
	            <td>{{ form_widget(value.value) }}</td>
	            <td>{{ form_widget(value.publicValue) }}</td>
	            <td>{{ form_widget(value.position) }}</td>
	            <td>
	                {#
	                <a href="{{ path('commerce_admin_product_attribute_option_delete_value', { 'id' : attributeOption.id, 'valueId' : value.vars.data.id }) }}" class="delete-product-attribute-option" title="Delete Value"><i class="icon icon-trash"></i></a>
	                #}
	            </td>
	        </tr>
	        {% endfor %}
	    {% else %}
	    <tr>
	        <td colspan="5" class="no-results text-center"><strong>No values were found, you need to add some.</strong></td>
	    </tr>
	    {% endif %}
    </tbody>
</table> 