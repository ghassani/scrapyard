<table class="table table-striped table-bordered table-condensed product-category-table">
    <thead>
	    <tr>
	        <th>Category</th>
	        <th></th>
	    </tr>
    </thead>
    <tfoot>
        <tr>
             <th colspan="3" class="text-right">
                 <a href="{{ path('commerce_admin_product_category_add', { 'productId' : product.id }) }}" title="Add Category" class="btn btn-primary btn-sm add-product-category"><i class="icon-plus"></i> Add Category</a>
             </th>
        </tr>
    </tfoot>
    <tbody>
        {% if product.categories|length %}
	        {% for category in product.categories %}
				{{ include('SplicedCommerceAdminBundle:ProductCategory:category_row.html.twig' ) }}
	        {% endfor %}
	    {% endif %}
	    <tr class="no-results {{ product.categories|length ? 'hide' : '' }}">
	        <td colspan="2" class="text-center"><strong>No Categories Currently Related</strong></td>
	    </tr>
    </tbody>
</table>