
<div class="form-group">
	<div class="col-lg-6">
		{{ form_label(form.cost) }}
		{{ form_widget(form.cost, { 'attr' : { 'class' : 'form-control' } }) }}
		{{ form_errors(form.cost) }}
	</div>
	<div class="col-lg-6">
		{{ form_label(form.price) }}
		{{ form_widget(form.price, { 'attr' : { 'class' : 'form-control' } }) }}
		{{ form_errors(form.price) }}
	</div>
</div>

{% if form.specialPrice is defined %}
<div class="form-group">
	<div class="col-lg-6">
		{{ form_label(form.specialPrice) }}
		{{ form_widget(form.specialPrice, { 'attr' : { 'class' : 'form-control' } }) }}
		{{ form_errors(form.specialPrice) }}
	</div>
	<div class="col-lg-6">
		{{ form_label(form.specialFromDate, "Special Good From") }}
		{{ form_widget(form.specialFromDate, { 'attr' : { 'class' : 'datepicker' } }) }} to 
		{{ form_widget(form.specialToDate, { 'attr' : { 'class' : 'datepicker' } }) }}
		{{ form_errors(form.specialFromDate) }}
		{{ form_errors(form.specialToDate) }}
	</div>
</div>
{% endif %}

