{% form_theme form "SplicedCommerceAdminBundle:Form:bootstrap_form_row.html.twig" %}


<div class="form-group">
	<div class="col-lg-12">
		{{ form_row(form.isActive) }}
	</div>
</div>

<div class="form-group">
	<div class="col-lg-12">
		{{ form_row(form.name) }}
	</div>
</div>

<div class="form-group">
	<div class="col-lg-6">
        {% if product is defined %}
        	{{ form_row(form.sku, { 'attr' : { 'class' : 'edit-sku-check', 'data-original' : product.sku, 'data-id' : product.id } }) }}
        {% else %}
        	{{ form_row(form.sku, { 'attr' : { 'class' : 'new-sku-check' } }) }}
        {% endif %}
	</div>
	<div class="col-lg-6">
        {% if product is defined %}
        	{{ form_row(form.urlSlug, { 'attr' : { 'class' : 'form-control product-url-slug-auto-format edit-product-url-slug-check', 'data-original' : product.urlSlug, 'data-id' : product.id } }) }}
        {% else %}
        	{{ form_row(form.urlSlug, { 'attr' : { 'class' : 'form-control product-url-slug-auto-format new-product-url-slug-check' } }) }}
        {% endif %}
	</div>
</div>

<div class="form-group">
	<div class="col-lg-6">
		{{ form_row(form.manufacturer) }}
	</div>
	<div class="col-lg-6">
		{{ form_row(form.manufacturerPart) }}
	</div>
</div>



