<div class="row">
	  	<div class="col-lg-6">
	  	    {% if form.vars.data.id|length %}
			<ul class="list-unstyled cms-page-dates">
				<li><span class="label label-success">Created: {{ page.createdAt|date('m/d/Y h:i a') }}</span></li>
				<li><span class="label label-info">Updated: {{ page.updatedAt|date('m/d/Y h:i a') }}</span></li>
			</ul>
			{% endif %}
	  	</div>
	  	<div class="col-lg-6">
		  	<div class="form-group">
			    {{ form_row(form.isActive, {'attr' : { 'class' : 'form-control' } }) }}
			</div>
	  	</div>
	</div> 
	<div class="form-group">
	    {{ form_row(form.title, {'attr' : { 'class' : 'form-control' } }) }}
	</div>
	<div class="form-group">
	    {{ form_row(form.pageTitle, {'attr' : { 'class' : 'form-control' } }) }}
	</div>
	<div class="form-group">
	    {{ form_row(form.pageLayout, {'attr' : { 'class' : 'form-control' } }) }}
	</div>
	<div class="form-group">
	  	<input type="hidden" value="original_url_slug" value="{{ form.vars.data.urlSlug }}" />
	    {{ form_row(form.urlSlug, {'attr' : { 'class' : 'form-control' } }) }}
	    <div>
	    	<strong>Route Path:</strong> {{ page.route is defined and page.route|length ? page.route.requestPath : '' }}
	    </div>
	</div>
  
	<div class="row">
	  	<div class="col-lg-6">
		  	<div class="form-group">
			    {{ form_row(form.metaKeywords, {'attr' : { 'class' : 'form-control' } }) }}
			</div>
	  	</div>
	  	<div class="col-lg-6">
		  	<div class="form-group">
			    {{ form_label(form.metaDescription, "META Description") }}
			    {{ form_widget(form.metaDescription, {'attr' : { 'class' : 'form-control' } }) }}
			    {{ form_errors(form.metaDescription) }}
			</div>
	  	</div>
	</div> 
	<div class="row">
	  	<div class="col-lg-12">
		  	<div class="form-group">
			    {{ form_label(form.content, "Content Source") }}
			    {{ form_widget(form.content, {'attr' : { 'class' : 'form-control wysiwyg' } }) }}
			    {{ form_errors(form.content) }}
			</div>
	  	</div>
	</div> 
  
