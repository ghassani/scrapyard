{% block field_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
	        <ul class="error_list unstyled">
	            {% for error in errors %}
	                <li class="text-error"><i class="icon-chevron-up"></i> {{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
	            {% endfor %}
	        </ul>
        {% endif %}
    {% endspaceless %}
{% endblock field_errors %}
