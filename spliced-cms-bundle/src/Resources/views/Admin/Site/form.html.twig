
<div role="tabpanel">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        {% if form.vars.data.id > 0 %}
        <li role="presentation" class="active"><a href="#site-tab-1" aria-controls="site-tab-1" role="tab" data-toggle="tab">Overview</a></li>
        {% endif %}
        <li role="presentation" class="{{ not form.vars.data.id ? 'active' : '' }}"><a href="#site-tab-2" aria-controls="site-tab-2" role="tab" data-toggle="tab">Settings</a></li>
        <li role="presentation"><a href="#site-tab-3" aria-controls="site-tab-3" role="tab" data-toggle="tab">Aliases</a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        {% if form.vars.data.id > 0 %}
        <div role="tabpanel" class="tab-pane active" id="site-tab-1">
            <table class="table table-striped table-bordered">
                <thead>
                </thead>
                <tbody>
                    <tr>
                        <th>Root Directory</th>
                        <td>{{ form.vars.data.rootDir }}</td>
                    </tr>
                    <tr>
                        <th>Web Directory</th>
                        <td>{{ form.vars.data.webDir }}</td>
                    </tr>
                    <tr>
                        <th>Template Directory</th>
                        <td>{{ form.vars.data.templateDir }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        {% endif %}
        <div role="tabpanel" class="tab-pane {{ not form.vars.data.id ? 'active' : '' }}" id="site-tab-2">
            {{ form_errors(form) }}
            {{ form_row(form.domain) }}
            {% if form.vars.data.id > 0 %}
                <div class="form-row">
                    <label>Domain:</label>
                    <div class="form-control">{{ form.vars.data.domain }}</div>
                </div>
            {% endif %}
            {{ form_row(form.isActive) }}
            {% if form.defaultPage is defined %}
                {{ form_row(form.defaultPage) }}
            {% endif %}
            {{ form_rest(form) }}
        </div>
        <div role="tabpanel" class="tab-pane" id="site-tab-3">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Domain</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for alias in form.vars.data.aliases %}
                    <tr>
                        <td>{{ alias.domain }}</td>
                        <td></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
