{% extends 'SplicedCmsBundle:Layout:admin_default.html.twig' %}

{% block title %}- Configuration Item {{ configurationItem.id }} {{ configurationItem.key }}{% endblock %}

{% block page_header %}
    <div class="page-header">
        <div class="pull-right">
            <a href="javascript:;" data-action="toggle-help" class="btn btn-info btn-sm" title="Help"><i class="fa fa-question"></i></a>
            <a href="{{ path('spliced_cms_admin_configuration_item_list') }}" class="btn btn-default btn-sm" title="Back To List" ><i class="fa fa-backward"></i></a>
            {% if deleteForm is defined %}
                <a class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteConfirmationModal" title="Delete"><i class="fa fa-trash"></i></a>
            {% endif %}
            <button type="button" class="btn btn-primary btn-sm" data-action="form-submit" data-target="#configuration-item-form" title="Update"><i class="fa fa-save"></i></button>
        </div>
        <h1>Editing {{ configurationItem.key }} <small>Configuration Item #{{ configurationItem.id }}</small></h1>
    </div>
{% endblock %}

{% block content %}
    <form method="post" action="{{ path('spliced_cms_admin_configuration_item_update', { 'id' : configurationItem.id }) }}" class="form" role="form" id="configuration-item-form">
        {{ include('SplicedCmsBundle:Admin/ConfigurationItem:form.html.twig') }}
    </form>
    {% if deleteForm is defined %}
        <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <form method="post" action="">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h4>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this configuration item?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block body_end %}
    {{ parent() }}
{% endblock %}
