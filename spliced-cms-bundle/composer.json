{
    "name" : "splicedmedia/cms-bundle",
    "description" : "Spliced Media Content Managment for Symfony2",    
    "type" : "project",    
    "license" : [
        "Apache 2.0"
    ],
    "require": {
        "php": ">=5.3.3",
        "symfony/framework-standard-edition":       "~2.3",
        "friendsofsymfony/user-bundle":             "~2.0",
        "knplabs/knp-menu-bundle":                  "^2.1",
        "knplabs/knp-paginator-bundle":             "^2.5",
        "symfony-cmf/routing-bundle":               "^1.3",
        "imagine/imagine":                          "^0.6.3",
        "guzzlehttp/guzzle":                        "^6.1",
        "gedmo/doctrine-extensions":                "^2.4",
        "splicedmedia/admin-theme-bundle" :         "dev-master",
        "splicedmedia/media-manager-bundle" :       "dev-master",
        "splicedmedia/configuration-bundle" :       "dev-master"
    },    
    "autoload" : {
        "psr-4" : {
            "Spliced\\Bundle\\CmsBundle\\" : "src/"
        }
    },    
    "scripts": {
        "post-install-cmd": [
            "bower install"
        ],
        "post-update-cmd": [
            "bower install"
        ]
    },
    "prefer-stable": true,
    "minimum-stability" : "dev"
}
